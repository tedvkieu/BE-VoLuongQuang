<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="010-add-contact" author="codex">
    <createTable tableName="contact">
      <column name="contact_id" type="varchar(255)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="email" type="varchar(255)"/>
      <column name="phone" type="varchar(30)"/>
      <column name="message" type="varchar(4000)"/>
      <column name="uuid" type="varchar(36)"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_at" type="timestamp"/>
      <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
    </createTable>

    <createIndex indexName="idx_contact_created_at" tableName="contact">
      <column name="created_at"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>

