<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="012-add-featured-image" author="codex">
    <createTable tableName="featured_image">
      <column name="featured_image_id" type="varchar(255)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="title" type="varchar(255)"/>
      <column name="link_url" type="varchar(2048)"/>
      <column name="sort_order" type="int"/>
      <column name="is_active" type="boolean"/>
      <column name="image_id" type="varchar(255)"/>
      <column name="uuid" type="varchar(36)"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_at" type="timestamp"/>
      <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
    </createTable>

    <addForeignKeyConstraint
      baseTableName="featured_image"
      baseColumnNames="image_id"
      referencedTableName="file_archival"
      referencedColumnNames="file_id"
      constraintName="fk_featured_image_file"
      onDelete="SET NULL"/>

    <createIndex indexName="idx_featured_image_image_id" tableName="featured_image">
      <column name="image_id"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>

