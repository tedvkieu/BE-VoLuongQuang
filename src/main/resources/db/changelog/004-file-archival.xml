<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="004-create-file-archival" author="codex">
    <createTable tableName="file_archival">
      <column name="file_id" type="varchar(255)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="file_url" type="varchar(2048)">
        <constraints nullable="false"/>
      </column>
      <column name="storage_provider" type="varchar(32)"/>
      <column name="product_id" type="varchar(255)"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_at" type="timestamp"/>
    </createTable>

    <addForeignKeyConstraint
      baseTableName="file_archival"
      baseColumnNames="product_id"
      referencedTableName="product"
      referencedColumnNames="product_id"
      constraintName="fk_file_archival_product"/>

    <createIndex indexName="idx_file_archival_product_id" tableName="file_archival">
      <column name="product_id"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
