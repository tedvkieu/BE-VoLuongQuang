<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="008-add-user-avatar" author="codex">
    <addColumn tableName="users">
      <column name="avatar_id" type="varchar(255)"/>
    </addColumn>

    <addForeignKeyConstraint
      baseTableName="users"
      baseColumnNames="avatar_id"
      referencedTableName="file_archival"
      referencedColumnNames="file_id"
      constraintName="fk_users_avatar"
      onDelete="SET NULL"/>

    <createIndex indexName="idx_users_avatar_id" tableName="users">
      <column name="avatar_id"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
