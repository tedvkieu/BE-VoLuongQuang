<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="017-add-product-variant-final-price" author="codex">
    <addColumn tableName="product_variant">
      <column name="final_price" type="numeric(12,2)" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
    </addColumn>

    <sql>
      UPDATE product_variant
      SET final_price = variant_price
      WHERE final_price IS NULL OR final_price = 0;
    </sql>
  </changeSet>

</databaseChangeLog>

